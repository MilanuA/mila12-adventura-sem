<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cz.vse.adventura.controller.MainController">

  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints maxHeight="127.0" minHeight="0.0" prefHeight="24.0" valignment="TOP" vgrow="SOMETIMES" />
    <RowConstraints maxHeight="377.0" minHeight="10.0" prefHeight="329.0" valignment="BASELINE" vgrow="ALWAYS" />
    <RowConstraints maxHeight="73.0" minHeight="0.0" prefHeight="46.0" valignment="BOTTOM" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <MenuBar GridPane.valignment="TOP">
        <menus>
          <Menu mnemonicParsing="false" text="Hra">
            <items>
                <MenuItem fx:id="restartGameMenuItem" mnemonicParsing="false" text="Začít novou hru" />
                <MenuItem onAction="#quitGame" mnemonicParsing="false" text="Ukončit hru" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Nápověda">
                <items>
                    <MenuItem onAction="#showHelp" mnemonicParsing="false" text="Ukázat nápovědu" />
                </items>
            </Menu>
        </menus>
      </MenuBar>
      <TextArea fx:id="output" editable="false" GridPane.rowIndex="1" />
      <HBox GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM">
         <children>
            <TextField fx:id="inputField" onAction="#sendInput" HBox.hgrow="ALWAYS">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </TextField>
            <Button fx:id="sendBtn" mnemonicParsing="false" onAction="#sendInput" text="Odeslat příkaz">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </HBox>
   </children>
</GridPane>
